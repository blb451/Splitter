<div class='searchform' style='height:120px; width: 850px;'>

  <%= form_tag search_index_path, method: "get", remote: true, html: { class: "form" } do %>
  <div class="form-group col-xs-8">
    <%= text_field_tag(:name, "", placeholder: "Search music", class: "form-control") %>
    <div class="modal-footer">
      <div class='pull-left' style='font-size: 16px;'>
        Artist: <%= check_box_tag :search_artist, as: :boolean %>
        Album: <%= check_box_tag :search_album, as: :boolean %>
        Track: <%= check_box_tag :search_track, as: :boolean %> <br />
      </div>
      <%= submit_tag "Search", class: "btn btn-success" %>
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>
  </div>
  <% end %>

</div>
