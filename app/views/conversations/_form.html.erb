<%= form_for :conversation, url: :conversations, html: { class: "" } do |f| %>
  <div class="form-group">
    <%= f.label :recipients %>
    <%= f.select(:recipients, current_user.followers.collect {|p| [ p.username, p.id ] }, {:include_blank => 'Select a username'}, {class: "chosen-select form-control", data: { placeholder: "Select Recipient" }})%>
  </div>
  <div class="form-group">
    <%= f.label :subject %>
    <%= f.text_field :subject, placeholder: "Subject", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :message %>
    <%= f.text_area :body, class: 'form-control',placeholder: "Type your message here", rows: 4  %>
  </div>
  <%= f.submit "Send Message", class: "btn btn-success pull-right" %>
<% end %>

<script>
  $('.chosen-select').chosen()
</script>
